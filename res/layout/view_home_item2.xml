<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="11.0px"
    android:paddingRight="11.0px" >

    <View
        android:id="@+id/view_top6"
        android:layout_width="5.0dip"
        android:layout_height="15.0dip"
        android:layout_marginLeft="7.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="8.0dip"
        android:background="@color/red" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/view_top6"
        android:text="桃色诱惑"
        android:textColor="#ff000000"
        android:textSize="18.0dip" />

    <TextView
        android:id="@+id/refresh_date4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5.0dip"
        android:layout_marginTop="8.0dip"
        android:text="最近更新日期：03-01"
        android:textColor="#ff555555"
        android:textSize="13.0dip" />

    <LinearLayout
        android:id="@+id/view_top_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_top6"
        android:layout_marginTop="8.0dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5.0px"
            android:layout_weight="1.0"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:onClick="imageOnClick"
            android:src="@drawable/image6" />

        <ImageView
            android:id="@+id/image7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0px"
            android:layout_weight="1.0"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:onClick="imageOnClick"
            android:src="@drawable/image7" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_top_ll"
        android:layout_marginTop="8.0dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5.0px"
            android:layout_weight="1.0"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:onClick="imageOnClick"
            android:src="@drawable/image8" />

        <ImageView
            android:id="@+id/image9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0px"
            android:layout_weight="1.0"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:onClick="imageOnClick"
            android:src="@drawable/image9" />
    </LinearLayout>

</RelativeLayout>